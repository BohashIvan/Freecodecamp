function frankenSplice(arr1, arr2, n) {
    var v2 = arr2.slice(),
        i,
        size = arr1.length - 1;
    for (i = size; i >= 0; i -= 1 ) {
        v2.splice(n, 0, arr1[i]);        
    }
    return v2;
}
  
console.log(frankenSplice([1, 2, 3], [4, 5, 6], 1));
console.log(frankenSplice([1, 2], ["a", "b"], 1));
console.log(frankenSplice(["claw", "tentacle"], ["head", "shoulders", "knees", "toes"], 2));
