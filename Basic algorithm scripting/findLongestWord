function findLongestWordLength(str) {
    var words = str.split(' ');
    // console.log(words);

    var longestWord = '';
    for (var word of words) {
        // console.log(word);
        if (word.length > longestWord.length) {
            longestWord = word;
        }
    }
    return longestWord.length;
}

var first = findLongestWordLength("The quick brown fox jumped over the lazy dog");
var second = findLongestWordLength("May the force be with you");
var third = findLongestWordLength("Google do a barrel roll");
var fourth = findLongestWordLength("What is the average airspeed velocity of an unladen swallow");
var fifth = findLongestWordLength("What if we try a super-long word such as otorhinolaryngology");
console.log(first, second, third, fourth, fifth);
