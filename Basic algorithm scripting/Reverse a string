function reverseString(str) {      
    var i,
        size = str.length,
        reverse = '';

    for (i = size - 1; i >= 0; i -= 1) {
        reverse += str[i];
    } 
    
    return reverse;
    
    // return str.split('').reverse().join('');
};



console.log(reverseString("hello"));
console.log(reverseString("Howdy"));
console.log(reverseString("Greetings from Earth"));
